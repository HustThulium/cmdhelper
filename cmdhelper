#!/bin/bash

# 使用脚本所在目录，便于复制到任意位置使用
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
HELPER_FILE="$SCRIPT_DIR/helpers.txt"

if [ ! -f "$HELPER_FILE" ]; then
    echo "❌ 文件不存在: $HELPER_FILE"
    exit 1
fi

if [ $# -eq 0 ]; then
    cat "$HELPER_FILE" | grep -v "#####"
else
    grep --color=auto -i "$1" "$HELPER_FILE"
fi
